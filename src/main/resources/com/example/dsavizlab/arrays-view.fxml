<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<VBox spacing="20.0" xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.example.dsavizlab.controllers.ArrayController">
    <Button alignment="TOP_LEFT" text="Back" onAction="#OnBackButtonClicked" />
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
    </padding>
    <HBox alignment="CENTER">
        <Label text="Generate a Random Integer Array by giving the Array Length" />
    </HBox>
    <HBox alignment="CENTER" spacing="10.0">
        <TextField fx:id="UserInputArrayLength" promptText="Length of the Array" />
        <Button text="Generate" onAction="#OnGenerateArrayClicked" />
    </HBox>
    <HBox fx:id="ArrayView" alignment="CENTER" spacing="5.0" />
</VBox>